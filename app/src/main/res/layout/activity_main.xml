<?xml version="1.0" encoding="utf-8"?>
<!--如果要使用自定义的属性，那么需要创建自己的明名空间xmlns-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.helloncu.androidexample.View.ExtentTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="My android helloWord"
        android:textColor="#000000"
        android:textSize="22sp"/>

    <com.helloncu.androidexample.View.TopBar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAllCaps="false"
        custom:leftBackground="@color/colorAccent"
        custom:leftText="MusicRect"
        custom:leftTextColor="#FFFFFF"
        custom:rightBackground="@color/colorPrimaryDark"
        custom:rightText="Cricle"
        custom:rightTextColor="#FFFFFF"
        custom:title="自定义标题"
        custom:titleTextColor="#123456"
        custom:titleTextSize="12sp">

    </com.helloncu.androidexample.View.TopBar>

    <include
        android:id="@+id/topBar2"
        layout="@layout/topbar"
        />
</LinearLayout>
